<form>
    <div class="form-group">
        <label for="exampleFormControlInput1">User</label>
        <input type="username" class="form-control" id="exampleFormControlInput1" placeholder="Please enter any username">
    </div>

    <!--Insert star rating here for cleanliness-->
    <p>
        <div class='rating-stars'>
            <strong>ID</strong>: {{example.id}}
            <ul id='stars'>
                <li class='star' data-value='1'>
